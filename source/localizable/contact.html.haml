%section.contact
  .well= partial "content/#{I18n.locale}/how-to-contact"

%section.hiring-options
  = partial "content/#{I18n.locale}/hiring-options"

%hr

%section.notes
  %p= I18n.t('contact.contact-methods')

  .row
    .col-md-2.col-md-offset-3
      = link_to 'LinkedIn', data.settings.services.linkedin,
        class: 'btn btn-large btn-block btn-inverse'
    .col-md-2
      = link_to 'Twitter', data.settings.services.twitter,
        class: 'btn btn-large btn-block btn-inverse'
    .col-md-2
      = link_to 'Google', data.settings.services.google,
        class: 'btn btn-large btn-block btn-inverse'

%section.pair-with-me
  %p= I18n.t('contact.pair-with-me')
  = mail_to data.settings.contact.email, '#PairWithMe',
    subject: 'Hey, PairWithMe', class: 'btn btn-default btn-large'
