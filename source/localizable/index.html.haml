---
layout: home
priority: 1.0
---

%section.introduction
  .row
    = link_to image_tag(gravatar_for(data.settings.contact.email, 120), :class => 'img-circle', :alt => 'David Anguita'), 'index.html'

    %h1 David Anguita
    %h4= partial "content/#{I18n.locale}/introducing-myself"
    %h4= partial "content/#{I18n.locale}/introducing-services"

%section.tiles
  .row
    - %w(services methodology contact).each do |page|
      .span4
        .tile
          %h3= I18n.t("home.#{page}-title")
          %p= I18n.t("home.#{page}-description")
          = link_to I18n.t("home.#{page}-label"), "#{page}.html", :class => 'btn btn-primary btn-large btn-block'

%section.contact
  .row
    .span3
      = mail_to data.settings.contact.email, 'Email', :class => 'btn btn-block palette palette-night'
    .span3
      = link_to 'LinkedIn', data.settings.services.linkedin, :class => 'btn btn-block palette palette-night'
    .span3
      = link_to 'GitHub', data.settings.services.github, :class => 'btn btn-block palette palette-night'
    .span3
      = link_to 'Twitter', data.settings.services.twitter, :class => 'btn btn-block palette palette-night'

%section.notes
  .row
    %h4= I18n.t('home.i-write-my-blog')
    = link_to '"I solve problems"', data.settings.related.blog, :class => 'btn palette palette-asbestos'
