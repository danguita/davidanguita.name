%section.tiles
  .row
    .span4
      .tile
        %h3 Ruby on Rails
        %p Desarrollo back-end, front-end, entornos de producción y training
        = link_to 'Servicios', '/services', :class => 'btn btn-primary btn-large btn-block'
    .span4
      .tile
        %h3 Metodología
        %p Dedicación exclusiva. Desarrollo iterativo, robusto y mantenible
        = link_to 'Buscando la calidad', '/methodology', :class => 'btn btn-primary btn-large btn-block'
